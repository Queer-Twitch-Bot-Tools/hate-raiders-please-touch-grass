{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "allowJs": false,
        "declaration": false,
        "sourceMap": true,
        "rootDir": "src",
        "moduleResolution": "node",
        "baseUrl": "src",
        "outDir": "build",
        "strict": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    }
}